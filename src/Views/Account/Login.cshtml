@{
    ViewData["Title"] = "Đăng nhập hệ thống";
    Layout = null;
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<!-- Bootstrap Icons -->
<link href="~/css-bootstrap-icons/bootstrap-icons.css" rel="stylesheet">

<style>
    body {
        font-family: 'Roboto', sans-serif;
    }

    .overlay {
        background-color: rgba(0, 0, 0, 0.5);
    }

    .login-container {
        width: 380px;
    }

    .login-title {
        color: #06428b;
    }

    .login-title-2 {
        color: #0198d2;
    }

    .btn-primary {
        background-color: #0056b3;
    }

        .btn-primary:hover {
            background-color: #004494;
        }

    .brand-logo img {
        max-height: 60px;
    }

    .right-content {
        background-image: url("/img/login_bg.jpg");
        background-size: cover;
        background-position: center;
    }

    .input-group-text {
        background-color: transparent;
        border: none;
        padding: 0;
        margin-bottom: 5px;
        display: flex;
        align-items: center;
    }

        .input-group-text i {
            margin-right: 8px;
        }

        .input-group-text font {
            color: #6c757d;
            font-size: 0.8rem;
            margin-left: 5px;
        }
</style>

<div class="overlay position-absolute top-0 start-0 w-100 h-100 d-flex flex-column">
    <div class="content-container d-flex flex-fill">
        <div class="login-container bg-white p-4 shadow">
            <div class="brand-logo text-center mb-4">
                <img src="/img/logo.svg" alt="HOA PHAT Logo">
            </div>
            <p class="login-title text-center fw-bold mb-4">Công ty cổ phần thép Hòa Phát <br> <span class="login-title-2">DUNG QUẤT</span></p>
            <form asp-controller="Account" asp-action="Login" method="post">
                <div class="form-group mb-4">
                    <div class="input-group-text">
                        <i class="bi bi-person-fill"></i>
                        <label for="emp_id" class="form-label">Tài khoản <font>(* Nhập mã nhân viên)</font></label>
                    </div>
                    <input type="text" class="form-control p-3 rounded" id="emp_id" name="emp_id" placeholder="Mã nhân viên" required>
                </div>
                <div class="form-group mb-4">
                    <div class="input-group-text">
                        <i class="bi bi-lock-fill"></i>
                        <label for="password" class="form-label">Mật khẩu <font>(* Nhập Mật khẩu)</font></label>
                    </div>
                    <input type="password" class="form-control p-3 rounded" id="password" name="password" placeholder="Mật khẩu" required>
                </div>
                @if (string.IsNullOrEmpty(ViewBag.Error) == false) {
                    <div style="margin-bottom: 10px; color: red;">
                        @ViewBag.Error
                    </div>
                }
                <button type="submit" class="btn btn-primary w-100 p-3 fw-bold rounded">Đăng nhập</button>
            </form>
        </div>
        
        <div class="right-content flex-fill d-flex align-items-center justify-content-center p-4 bg-cover bg-center"></div>
    </div>
</div>